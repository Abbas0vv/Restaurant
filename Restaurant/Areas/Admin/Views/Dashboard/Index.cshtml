@model List<Chef>

<div class="container mt-5">
    <a asp-action="Create" class="btn btn-success mb-2">Create New Chef</a>
    <table class="table table-dark   table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Designation</th>
                <th scope="col">Handle</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.Designation</td>
                    <td><img style="width :100px; height:100px" src="~/uploads/chefs/@item.ImageUrl"></td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ml-2">Delete</a>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>